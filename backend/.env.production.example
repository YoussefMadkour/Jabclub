# Database
DATABASE_URL="postgresql://jabclub_user:STRONG_PASSWORD_HERE@localhost:5432/jabclub_production?schema=public"

# JWT
JWT_SECRET="CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS"
JWT_EXPIRES_IN="24h"

# Server
PORT=5000
NODE_ENV="production"

# File Upload
UPLOAD_DIR="/var/www/jabclub/uploads"
